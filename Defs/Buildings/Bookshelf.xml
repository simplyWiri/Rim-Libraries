<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="FurnitureBase">
        <defName>RL_Bookcase</defName>
        <label>bookcase</label>
        <description>A workbench for tailoring clothes by hand. Works at 50% of the speed of an electric tailoring bench.</description>
        <thingClass>Libraries.Buildings.Building_Bookcase</thingClass>
        <graphicData>
            <texPath>Buildings/Bookcase</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1,1)</drawSize>
            <shaderType>CutoutComplex</shaderType>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <castEdgeShadows>true</castEdgeShadows>
        <staticSunShadowHeight>0.20</staticSunShadowHeight>
        <costStuffCount>75</costStuffCount>
        <stuffCategories>
            <li>Woody</li>
        </stuffCategories>
        <altitudeLayer>Building</altitudeLayer>
        <fillPercent>0.5</fillPercent>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <WorkToBuild>2000</WorkToBuild>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
            <Mass>30</Mass>
        </statBases>
        <size>(1,1)</size>
        <designationCategory>Production</designationCategory>
        <passability>PassThroughOnly</passability>
        <pathCost>70</pathCost>
        <surfaceType>Item</surfaceType>
        <inspectorTabs>
            <li>ITab_Storage</li>
        </inspectorTabs>
        <building>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
            <fixedStorageSettings>
                <filter>
                    <thingDefs>
                        <li>RL_SkillBook</li>
                    </thingDefs>
                </filter>
            </fixedStorageSettings>
        </building>
        <comps>
            <li Class="Libraries.Buildings.CompProperties_Storage"/>
        </comps>
    </ThingDef>

</Defs>